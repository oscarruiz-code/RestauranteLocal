<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.restaurante.controller.PedidosController">
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Cliente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="clienteField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Estado:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="estadoField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Total:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="totalField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10.0" alignment="CENTER">
        <Button text="Agregar" onAction="#agregarPedido"/>
        <Button text="Actualizar" onAction="#actualizarPedido"/>
        <Button text="Eliminar" onAction="#eliminarPedido"/>
        <Button text="Mostrar Todos" onAction="#mostrarTodos"/>
    </HBox>

    <VBox.margin>
        <Insets top="20"/>
    </VBox.margin>

    <TableView fx:id="pedidoTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="clienteColumn" text="Cliente"/>
            <TableColumn fx:id="estadoColumn" text="Estado"/>
            <TableColumn fx:id="totalColumn" text="Total"/>
        </columns>
    </TableView>

    <HBox spacing="10.0" alignment="CENTER">
        <Label text="Buscar:"/>
        <TextField fx:id="buscarField"/>
        <Button text="Buscar" onAction="#buscarPedido"/>
    </HBox>

    <VBox.margin>
        <Insets top="20"/>
    </VBox.margin>
</VBox>
