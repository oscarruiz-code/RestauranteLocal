<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.layout.VBox?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.restaurante.controller.PrincipalController">
    <ImageView>
        <Image url="@../imagenes/pizza.jpg"/>
    </ImageView>
    <VBox alignment="CENTER" spacing="10">
        <Button text="Gestión de Clientes" onAction="#irAGestionClientes" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-font-size: 14px; -fx-cursor: hand;"/>
        <Button text="Gestión de Productos" onAction="#irAGestionProductos" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-font-size: 14px; -fx-cursor: hand;"/>
        <Button text="Gestión de Pedidos" onAction="#irAGestionPedidos" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-font-size: 14px; -fx-cursor: hand;"/>
    </VBox>
</StackPane>
